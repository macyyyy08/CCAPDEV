<div class="signup-box">
    <div class="signup-content">
        <h2>Sign Up</h2>
        <form id="signup-form" onsubmit="return checkSignInForm();" method="post" enctype="multipart/form-data">
            <input type="text" name="fullName" placeholder="Full Name" required>
            <input type="email" name="email" placeholder="Email" required>
            <input type="text" name="username" placeholder="Username" required>
            <input type="password" name="password" placeholder="Password" required>
            <input type="password" name="confirmPassword" placeholder="Confirm Password" required>
            <textarea id="review" name="review" rows="8" cols="50" placeholder="Bio"></textarea>
            <br>
            <label for="profilePicture" class="profile-label">Insert Profile Picture</label>
            <input type="file" id="profilePicture" name="profilePicture" accept="image/*">
            <button type="submit">Sign Up</button>
        </form>
    </div>
    <div class="image-container">
        <img src="https://images.pexels.com/photos/376464/pexels-photo-376464.jpeg" alt="Image">
    </div>
</div>