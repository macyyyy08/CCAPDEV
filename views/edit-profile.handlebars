<div class="body-parent">
    {{>navigation}}

    <div class="main-area">
        <div class="edit-title">
            <h1>Edit Profile Details</h1>
        </div>
        <form id="profileForm" action="/save-profile-changes" method="post">
            <div class="container">
                <label>Name </label>
                <input type="text" id="name" name="name" value="{{name}}" required><br>
                <label>Username </label>   
                <input type="text" id="username" name="username" value="{{username}}" required><br>
                <label>Bio</label>
                <input type="text" id="bio" name="bio" value="{{bio}}"><br>
                <label>Your Profile Picture</label>
                <input type="text" id="profilePicture" name="profilePicture" value="{{pic}}"><br>
                <button type="submit" id="save">Save</button>
            </div>
        </form>
        </div>
    </div>

